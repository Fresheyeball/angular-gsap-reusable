#modal
	position absolute
	left 50%
	top 50%
	width 0
	height 0
	overflow hidden
	opacity 0

#modalContent
	height 100%
	width 100%
	background white
	border-radius 10px	
	box-sizing border-box
	padding 25px

#overlay
	background rgba(0,0,0,0.5)
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	display none
	opacity 0